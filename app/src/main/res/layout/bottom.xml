<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:id="@+id/bottom">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/indexes"
        android:layout_marginStart="10dp">

        <TableRow
            android:background="@drawable/border"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Название индекса"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:layout_margin="2dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Результат"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:layout_margin="2dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Интерпретация"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:layout_margin="2dp"/>
            </FrameLayout>

        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="КПУ"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:layout_margin="2dp"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/kpu"
                    android:padding="0dp"
                    android:layout_margin="2dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Низкая степень тяжести кариозного процесса"
                    android:id="@+id/kpu_interpr"
                    android:padding="0dp"
                    android:textColor="@color/black"
                    android:layout_margin="2dp"/>
            </FrameLayout>

        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="BOP"
                    android:padding="0dp"
                    android:textColor="@color/black"
                    android:layout_margin="2dp"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:id="@+id/bop"
                        android:padding="0dp"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textColor="@color/black"
                        android:layout_margin="2dp"
                        android:text="%"/>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Норма"
                    android:textColor="@color/black"
                    android:id="@+id/bop_interpr"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:layout_margin="2dp"/>
            </FrameLayout>

        </TableRow>


        <TableRow
            android:background="@drawable/border"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:id="@+id/api"
                        android:padding="0dp"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:text="%"/>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Оптимальный уровень гигиены"
                    android:id="@+id/api_interpr"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:textColor="@color/black"
                    android:layout_margin="2dp"/>
            </FrameLayout>

        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPITN"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:layout_margin="2dp"
                    android:layout_gravity="center">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border">

                        <TextView
                            android:id="@+id/cpitn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/cpitn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:background="@drawable/border"
                            android:textColor="@color/black"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/cpitn3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:text="0"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border">

                        <TextView
                            android:id="@+id/cpitn4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/cpitn5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/cpitn6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:text="0"/>
                    </TableRow>
                </TableLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Лечение не требуется"
                    android:textColor="@color/black"
                    android:id="@+id/cpitn_interpr"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:layout_margin="2dp"/>
            </FrameLayout>

        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Russel"
                    android:textColor="@color/black"
                    android:padding="0dp"
                    android:layout_margin="2dp"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:id="@+id/russel"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:layout_margin="2dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Норма"
                    android:textColor="@color/black"
                    android:id="@+id/russel_interpr"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:layout_margin="2dp"/>
            </FrameLayout>

        </TableRow>
        <TableRow
            android:background="@drawable/border"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OHI-S"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:layout_margin="2dp"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/ohis"
                    android:padding="0dp"
                    android:layout_margin="2dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Хорошая гигиена"
                    android:textColor="@color/black"
                    android:id="@+id/ohis_interpr"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:layout_margin="2dp"/>
            </FrameLayout>

        </TableRow>
    </TableLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginStart="18dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/comments_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Комментарии"
        android:textColor="@color/black"
        android:inputType="text"
        app:boxStrokeColor="@color/black"
        app:endIconTint="@color/black"
        app:hintTextColor="@color/black"
        android:layout_gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/comments"
            android:layout_width="560dp"
            android:inputType="textCapSentences|textMultiLine"
            android:layout_height="195dp"
            android:textColor="@color/black"
            android:gravity="top|left"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>